        </div>--%>
        <table>
            <tr>
                <td class="brand"><h3>ArtMoments</h3></td>
                <td class="menu">
                    <asp:Menu ID="ArtworkMenu" runat="server" Orientation="Horizontal">            
                        <LevelMenuItemStyles>  
                            <asp:MenuItemStyle CssClass="ParentMenu" />  
                            <asp:MenuItemStyle CssClass="ChildMenu" />  
                            <asp:MenuItemStyle CssClass="ChildMenu" />  
                        </LevelMenuItemStyles>  
                        <StaticSelectedStyle CssClass="selected" />  
                    </asp:Menu>  
                </td>
            </tr>

        </table>

        <div id="sitemap">
            <asp:SiteMapPath ID="smArtMoments" runat="server">
